<UserControl x:Class="WPF.CommonControls.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.CommonControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Height="auto" VerticalAlignment="Top">Loading...</Label>
        <ProgressBar x:Name="Status" Grid.Row="1"  Margin="4" IsIndeterminate="True" Height="25" Width="auto" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
