<UserControl x:Class="LitKit1.ControlsWPF.Citation.CiteFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LitKit1.ControlsWPF.Citation"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="150">
    <Grid>
        <Border x:Name="Flyout" MaxHeight="50" HorizontalAlignment="Right" VerticalAlignment="Center" Width="140" BorderThickness="1" BorderBrush="LightGray" CornerRadius="10, 0, 0, 10" Background="LightGray" Visibility="Visible">
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                <StackPanel Orientation="Vertical" Width="40" Margin="2" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
                    <Ellipse x:Name="EllipseDelete" Fill="DarkGreen" MinHeight="25" Height="auto" Stretch="Fill"/>
                    <TextBlock x:Name="TextDelete" Text="Delete" HorizontalAlignment="Center" Visibility="Collapsed"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="40" Margin="2" MouseEnter="StackPanel_MouseEnter_1" MouseLeave="StackPanel_MouseLeave_1">
                    <Ellipse x:Name="EllipseEdit" Fill="DarkGreen" MinHeight="25" Height="auto">
                        <!--<Image Source="TBD"/>-->
                    </Ellipse>
                    <TextBlock x:Name="TextEdit" Text="Edit" HorizontalAlignment="Center" Visibility="Collapsed"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="40" Margin="2" MouseEnter="StackPanel_MouseEnter_2" MouseLeave="StackPanel_MouseLeave_2">
                    <Ellipse x:Name="EllipseInsert" Fill="DarkGreen" MinHeight="25" Height="auto" Stretch="UniformToFill"/>
                    <TextBlock x:Name="TextInsert" Text="Insert" HorizontalAlignment="Center" Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
