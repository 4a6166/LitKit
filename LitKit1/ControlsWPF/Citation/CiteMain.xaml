<UserControl x:Class="LitKit1.ControlsWPF.Citation.CiteMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LitKit1.ControlsWPF.Citation"
             mc:Ignorable="d" 
             d:DesignHeight="" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="CiteBlockStackPanel" HorizontalAlignment="Left" VerticalAlignment="Top">
                
            </StackPanel>
        </ScrollViewer>
        <Border x:Name="CiteAddedBorder" BorderBrush="Black" BorderThickness="2" CornerRadius="15, 15, 0, 0" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3" Visibility="Collapsed">
            <local:CiteAdd/>
        </Border>
        <local:CiteFormat HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Visibility="Collapsed"/>


    </Grid>
</UserControl>
