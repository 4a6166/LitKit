<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LitKit1.ControlsWPF.Citation"
             xmlns:Controls="clr-namespace:LitKit1.Controls" x:Class="LitKit1.ControlsWPF.Citation.CiteMain"
    xmlns:vm="clr-namespace:Citation.ViewModels;assembly=Citation"
    xmlns:dd="urn:gong-wpf-dragdrop" xmlns:numeric="http://gu.se/NumericInput"
    mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300">
    <UserControl.Resources>
        <!--<vm:MainViewVM/>-->
        <Brush x:Key="CiteTypeBrush_Exhibit">#136F63</Brush>
        <Brush x:Key="CiteTypeBrush_LegalCite">#3F88C5</Brush>
        <Brush x:Key="CiteTypeBrush_RecordCite">#D00000</Brush>
        <Brush x:Key="CiteTypeBrush_OtherCite">#FFBA08</Brush>
        <Brush x:Key="CiteTypeBrush_Extra">#032B43</Brush>
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <!--############################################-->
        <!-- Cite Format Expander-->
        <!--############################################-->
        <Grid
            VerticalAlignment="Bottom"
            Background="Transparent"
            Grid.Column="0" Grid.ColumnSpan="4"
            Grid.Row="3">
            <Border 
                Margin="3,3,3,0"
                Background="LightGray" CornerRadius="15,15,0,0">
                <Expander x:Name="CitationFormattingExpander" Header="Citation Formatting" 
                          FontWeight="DemiBold"
                  Margin="5,5,5,5" 
                  IsExpanded="True"
                      >
                    <StackPanel Orientation="Vertical"
                                Margin="0,15,0,0"
                        MaxHeight="620" Height="auto">
                        <Label FontStyle="Italic" FontWeight="Normal" Margin="0,0,0,15" 
                               Content="Drag the pieces to adjust Exhibit formatting"/>
                        <!--https://github.com/punker76/gong-wpf-dragdrop/wiki/Usage-->
                        <Label Content="Long Cite Formatting"/>
                        <ListBox x:Name="DragAndDropListBox"
                                 Width="auto"
                                 Margin="0,0,0,15"
                                 dd:DragDrop.IsDragSource="True"
                                 dd:DragDrop.IsDropTarget="True" >
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <Border x:Name="IntroDragAndDrop"
                                    Background="{StaticResource CiteTypeBrush_LegalCite}"
                                    Opacity=".4"
                                    CornerRadius="5"
                                    >
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Exhibit" Click="MenuItem_Click"/>
                                        <MenuItem Header="Ex." Click="MenuItem_Click_1"/>
                                        <MenuItem Header="Exh." Click="MenuItem_Click_2"/>
                                        <MenuItem Header="Appendix" Click="MenuItem_Click_3"/>
                                        <MenuItem Header="Appx." Click="MenuItem_Click_4"/>
                                        <MenuItem Header="Tab" Click="MenuItem_Click_5"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <StackPanel Orientation="Horizontal"
                                            >
                                    <Label x:Name="ExhibitIntroLabel"
                                           Content="Exhibit"/>
                                    <Grid x:Name="ExhibitDragDropImageDropDown"
                                          MouseEnter="ExhibitDragDropImageDropDown_MouseEnter" MouseLeave="ExhibitDragDropImageDropDown_MouseLeave">
                                        <Image  
                                           Width="10"
                                           Height="10"
                                            Margin="0,0,2,0"
                                           HorizontalAlignment="left"
                                           VerticalAlignment="Center"
                                            Source="C:\Users\Jake\Downloads\droparrow.png"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <Border x:Name="IndexDragAndDrop"
                                    Opacity=".4"
                                    Background="{StaticResource CiteTypeBrush_Exhibit}"
                                    CornerRadius="5">
                                <Label Content="#"/>
                            </Border>
                            <Border x:Name="PinDragAndDrop"
                                    Background="{StaticResource CiteTypeBrush_RecordCite}"
                                    Opacity=".4"
                                    CornerRadius="5">
                                <Label Content="PIN"/>
                            </Border>
                            <Border x:Name="OpenParenDragAndDrop"
                                    Background="{StaticResource CiteTypeBrush_Extra}"
                                    Opacity=".4"
                                    CornerRadius="5">
                                <Label Content="("/>
                            </Border>
                            <Border x:Name="DescriptionDragAndDrop"
                                    Background="{StaticResource CiteTypeBrush_OtherCite}"
                                    Opacity=".4"
                                    CornerRadius="5">
                                <Label Content="Description"/>
                            </Border>
                            <Border x:Name="CloseParenDragAndDrop"
                                    Background="{StaticResource CiteTypeBrush_Extra}"
                                    Opacity=".4"
                                    CornerRadius="5">
                                <Label Content=")"/>
                            </Border>
                        </ListBox>
                        <Label 
                            Content="Short Cite Formatting"/>
                        <ListBox x:Name="DragAndDropListBoxShort"
                                 Width="auto"
                                 Margin="0,0,0,15"
                                 dd:DragDrop.IsDragSource="True"
                                 dd:DragDrop.IsDropTarget="True" >
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <Border x:Name="IntroDragAndDropShort"
                                    Background="{StaticResource CiteTypeBrush_LegalCite}"
                                    CornerRadius="5"
                                    >
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Exhibit" Click="MenuItem_Click"/>
                                        <MenuItem Header="Ex." Click="MenuItem_Click_1"/>
                                        <MenuItem Header="Exh." Click="MenuItem_Click_2"/>
                                        <MenuItem Header="Appendix" Click="MenuItem_Click_3"/>
                                        <MenuItem Header="Appx." Click="MenuItem_Click_4"/>
                                        <MenuItem Header="Tab" Click="MenuItem_Click_5"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <StackPanel Orientation="Horizontal"
                                            >
                                    <Label x:Name="ExhibitIntroLabelShort"
                                        Content="Exhibit"/>
                                    <Grid x:Name="ExhibitDragDropImageDropDownShort"
                                          MouseEnter="ExhibitDragDropImageDropDown_MouseEnter" MouseLeave="ExhibitDragDropImageDropDown_MouseLeave">
                                        <Image  
                                           Width="10"
                                           Height="10"
                                            Margin="0,0,2,0"
                                           HorizontalAlignment="left"
                                           VerticalAlignment="Center"
                                            Source="C:\Users\Jake\Downloads\droparrow.png"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <Border x:Name="IndexDragAndDropShort"
                                    Background="{StaticResource CiteTypeBrush_Exhibit}"
                                    CornerRadius="5">
                                <Label Content="#"/>
                            </Border>
                            <Border x:Name="PinDragAndDropShort"
                                    Background="{StaticResource CiteTypeBrush_RecordCite}"
                                    CornerRadius="5">
                                <Label Content="PIN"/>
                            </Border>
                            <Border x:Name="OpenParenDragAndDropShort"
                                    Background="{StaticResource CiteTypeBrush_Extra}"
                                    CornerRadius="5">
                                <Label Content="("/>
                            </Border>
                            <Border x:Name="DescriptionDragAndDropShort"
                                    Background="{StaticResource CiteTypeBrush_OtherCite}"
                                    CornerRadius="5">
                                <Label Content="Description"/>
                            </Border>
                            <Border x:Name="CloseParenDragAndDropShort"
                                    Background="{StaticResource CiteTypeBrush_Extra}"
                                    CornerRadius="5">
                                <Label Content=")"/>
                            </Border>
                        </ListBox>

                        <CheckBox x:Name="IdCheckBox" 
                                  Margin="0,0,0,15" HorizontalAlignment="Center"
                                  IsChecked="True"
                                  >
                            <TextBlock>
                                <TextBlock.Inlines>
                                    <Run Text="Use "/>
                                    <Run FontStyle="Italic" Text="Id."/>
                                    <Run Text=" to represent repeated citations"/>
                                </TextBlock.Inlines>
                            </TextBlock>
                        </CheckBox>
                        <!--https://github.com/GuOrg/Gu.Wpf.NumericInput/blob/master/README.md#1-samples-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="Index Starts at"/>
                            <numeric:SpinnerDecorator x:Name="IndexStartNumUpDown"
                                MinWidth="50">
                                <!--<numeric:DoubleBox Value="1" 
                                                   CanValueBeNull="{Binding CanValueBeNull}"
                                                   ValidationTrigger="PropertyChanged"
                                                   MaxValue="10000"
                                                   MinValue="1"
                                                   NumberStyles="AllowLeadingSign"
                                                   RegexPattern="\1\d+(\.2\d+)"
                                                   StringFormat="#,0"
                                                   DecimalDigits="0"
                                                   AllowSpinners="True"
                                                   SpinUpdateMode="PropertyChanged"
                                                   Increment="{Binding Increment}"  
                                                   />-->
                                <numeric:IntBox Value="1"
                                                ValidationTrigger="PropertyChanged"
                                                CanValueBeNull="False"
                                                StringFormat="#,0"
                                                MinValue="1"
                                                AllowSpinners="True"
                                                SpinUpdateMode="PropertyChanged"
                                                Increment="{Binding Increment}"
                                                />
                            </numeric:SpinnerDecorator>
                        </StackPanel>
                        <UniformGrid>
                            <Button x:Name="UpdateFormatting"
                                    Margin="5">
                                <Label Content="Update Formatting"/>
                            </Button>
                            <Button x:Name="FormattingCancel"
                                    Margin="5">
                                <Label Content="Cancel"/>
                            </Button>
                        </UniformGrid>
                    </StackPanel>
                </Expander>
            </Border>
        </Grid>


