<UserControl x:Class="LitKit1.ControlsWPF.Citation.CiteBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:app="LitKit1.ControlsWPF.App"
             xmlns:local="clr-namespace:LitKit1.ControlsWPF.Citation"
             mc:Ignorable="d" 
             d:DesignHeight="62" d:DesignWidth="350">
    <Grid x:Name="MainGrid" Background="WhiteSmoke" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Grid.RowSpan="3" Width="auto" Height="auto" Margin="2,1,0,1" BorderThickness="1" CornerRadius="10, 10, 10, 10" BorderBrush="DarkGreen" Background="DarkGreen" />
        <TextBlock Height="auto"  Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="1" Text="Citation Reference Name" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Margin="4,2,0,2" TextTrimming="CharacterEllipsis"/>
        <TextBlock Height="auto" HorizontalAlignment="Left" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="2" Text="Exhibit 1, Example Long Cite Text for and Exhibit" FontWeight="Light" Margin="2" TextTrimming="CharacterEllipsis"/>
        <local:CiteFlyout x:Name="Flyout" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" />
    </Grid>
</UserControl>
