<UserControl x:Class="LitKit1.ControlsWPF.Citation.CiteBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:app="LitKit1.ControlsWPF.App"
             xmlns:local="clr-namespace:LitKit1.ControlsWPF.Citation"
             mc:Ignorable="d" 
             d:DesignHeight="53" d:DesignWidth="350" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid x:Name="MainGrid" Background="WhiteSmoke" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="22" />
            <RowDefinition Height="21"/>
            <RowDefinition Height="Auto"/>
            <!--<RowDefinition Height=".5"/>-->
        </Grid.RowDefinitions>
        <Border x:Name="CiteTypeIndicator" Grid.Column="1" Grid.RowSpan="3" Width="auto" Height="auto" Margin="2,1,0,1" BorderThickness="1" CornerRadius="3" BorderBrush="DarkGreen" Background="DarkGreen" />
        <TextBlock x:Name="CiteRefName" Height="auto"  Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="1" Text="Citation Reference py" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Margin="4,2,0,2" TextTrimming="CharacterEllipsis"/>
        <TextBlock x:Name="CiteLongExample" Height="auto" HorizontalAlignment="Left" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="2" Text="Exhibit 1, Example Long Cite Text for and Exhibit" FontWeight="Light" Margin="2,2,0,2" TextTrimming="CharacterEllipsis" Width="187"/>
        <TextBlock x:Name="CiteCount" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" Text="0" FontSize="30" FontWeight="Bold" Foreground="SlateGray" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBlock Grid.Column="3" Grid.Row="2" Text="Cites in Document" FontSize="6" Foreground="SlateGray" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <local:CiteFlyout x:Name="Flyout" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" Height="auto" Width="100" Visibility="Collapsed"/>
    </Grid>
</UserControl>
